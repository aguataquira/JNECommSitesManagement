<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Login", "Account")'>
                    <img src="~/Content/JNet Images/JNet Logo.png" height="50px" width="150px"/>
                </a>
               @* @Html.ActionLink("", "Account", "Login", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administration<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Customers", "Index", "Home")</li>
                            <li>@Html.ActionLink("Sites", "Index", "Home")</li>
                            <li>@Html.ActionLink("Employees", "Index", "Home")</li>
                            <li>@Html.ActionLink("Mobile Module", "Index", "Home")</li>
                        </ul>
                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Analytic<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("TimeSheet", "Index", "Home")</li>
                            <li>@Html.ActionLink("Pay Roll Totales", "Index", "Home")</li>
                        </ul>
                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Maintenance<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Users", "UsersIndex", "Maintenance")</li>
                            <li>@Html.ActionLink("Web Roles", "RolesIndex", "Maintenance")</li>
                            <li>@Html.ActionLink("Certifications", "CertificationsList", "Maintenance")</li>
                            <li>@Html.ActionLink("Tech Codes", "Index", "Home")</li>
                            <li>@Html.ActionLink("Crew Roles", "Index", "Home")</li>
                            <li>@Html.ActionLink("Payment Period", "Index", "Home")</li>
                        </ul>
                    </li>


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - JNet Communications</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
