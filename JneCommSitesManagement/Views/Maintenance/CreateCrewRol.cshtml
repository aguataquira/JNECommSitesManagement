@model JneCommSitesManagement.Models.CrewRolModel
@using JneCommSitesManagement.Helper;

@{
    ViewBag.Title = "Create Crew Role";
}

@{
    var queryCrewRol = Helper.GetCrewRoleByUser(User.Identity.Name);
    if (queryCrewRol != null)
    {
        if (queryCrewRol == "LEADER")
        {
            Layout = "~/Views/Shared/_LayoutCrewJneCommSites.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
    }

}

<h3 class="text-info"> Create Crew Role</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        
        <div class="form-group">
            @Html.LabelFor(model => model.crewRoleName, htmlAttributes: new { @class = "col-md-8" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.crewRoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.crewRoleName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.crewRoleDescription, htmlAttributes: new { @class = "col-md-8" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.crewRoleDescription, new { style = "margin: 2px; width: 306px; height: 89px;", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.crewRoleDescription, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "CrewRolesList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
