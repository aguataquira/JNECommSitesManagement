@model IEnumerable<JneCommSitesDataLayer.T_Certifications>

@{
    ViewBag.Title = "CertificationsList";
    Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
}

<h2>Certifications List</h2>

<p>
    @Html.ActionLink("Create New Certification", "CreateCertification")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Certification Name")
        </th>
        <th>
            @Html.DisplayName("Certification Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vCertificationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vCertificationDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCertification", new { certificationName = item.vCertificationName  })
        </td>
    </tr>
}

</table>
