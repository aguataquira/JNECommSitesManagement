@model IEnumerable<JneCommSitesDataLayer.T_Certifications>
@using JneCommSitesManagement.Helper;

@{
    ViewBag.Title = "SitesIndex";
}

@{
    var queryCrewRol = Helper.GetCrewRoleByUser(User.Identity.Name);
    if (queryCrewRol != null)
    {
            Layout = "~/Views/Shared/_LayoutCrewJneCommSites.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
    }

}

<h3 class="text-info">Certification List</h3>

<p>
    <a href='@Url.Action("CreateCertification", "Maintenance")'>
        <img src="~/Content/Jne Icons/AddCertificationIcon.png" />Add Certifiction
    </a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Certification Name")
        </th>
        <th>
            @Html.DisplayName("Certification Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vCertificationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vCertificationDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCertification", new { certificationName = item.vCertificationName  })
        </td>
    </tr>
}

</table>
