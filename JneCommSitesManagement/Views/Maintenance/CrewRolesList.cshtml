@model IEnumerable<JneCommSitesDataLayer.T_CrewRoles>

@{
    ViewBag.Title = "CrewRolesList";
    Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
}

<h3 class="text-info">Crew Roles List</h3>

<p>
    <a href='@Url.Action("CreateCrewRol", "Maintenance")'>
        <img src="~/Content/Jne Icons/AddCrewRoleIcon.png" /> Add Crew Role
    </a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Crew Role Name")
        </th>
        <th>
            @Html.DisplayName("Crew Role Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vCrewRoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vCrewRoleDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCrewRol", new { crewRoleName = item.vCrewRoleName  })
        </td>
    </tr>
}

</table>
