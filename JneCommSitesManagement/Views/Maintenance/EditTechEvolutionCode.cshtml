@model JneCommSitesManagement.Models.TechEvolutionCodesModel

@{
    ViewBag.Title = "EditTechEvolutionCode";
    Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
}

<h3 class="text-info"> Edit Tech Evolution Code</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.techEvolutionCodeName, htmlAttributes: new { @class = "col-md-8" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.techEvolutionCodeName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.techEvolutionCodeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.techEvolutionCodeDescription, htmlAttributes: new { @class = "col-md-8" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.techEvolutionCodeDescription, new { style = "margin: 2px; width: 306px; height: 89px;", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.techEvolutionCodeDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "TechEvolutionCodesList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
