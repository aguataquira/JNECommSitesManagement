@model IEnumerable<JneCommSitesDataLayer.AspNetRoles>

@{
    ViewBag.Title = "RolesIndex";
    Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
}

<h2>RolesIndex</h2>

<p>
    @Html.ActionLink("Create New Role", "CreateRol")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRol", new { rolName = item.Name }) 
        </td>
    </tr>
}

</table>
