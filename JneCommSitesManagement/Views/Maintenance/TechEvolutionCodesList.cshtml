@model IEnumerable<JneCommSitesDataLayer.T_TechEvolutionCodes>
@using JneCommSitesManagement.Helper

@{
    ViewBag.Title = "Tech Evolution Code";
}

@{
    var queryCrewRol = Helper.GetCrewRoleByUser(User.Identity.Name);
    if (queryCrewRol != null)
    {
        if (queryCrewRol == "LEADER")
        {
            Layout = "~/Views/Shared/_LayoutCrewJneCommSites.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
    }

}

<h3 class="text-info">Tech Evolution Code List</h3>

<p>
    <a href='@Url.Action("CreateTechEvolutionCode", "Maintenance")'>
        <img src="~/Content/Jne Icons/AddTechEvolutionCodeIcon.png" />  Add Tech Evolution Code
    </a>
</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Tech Evolution Code Name")
        </th>
        <th>
            @Html.DisplayName("Tech Evolution Code Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vTechEvolutionCodeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vTechEvolutionCodeDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTechEvolutionCode", new { techEvolutionCodeName = item.vTechEvolutionCodeName  }) |
        </td>
    </tr>
}

</table>
