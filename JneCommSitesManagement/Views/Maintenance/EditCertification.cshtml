@model JneCommSitesManagement.Models.CertificationModel

@{
    ViewBag.Title = "EditCertification";
    Layout = "~/Views/Shared/_LayoutJneCommSites.cshtml";
}

<h2>EditCertification</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CertificationModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.certificationName, htmlAttributes: new { @class = "col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.certificationName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.certificationName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.certificationpDescription, htmlAttributes: new { @class = "col-md-4" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.certificationpDescription, new { style = "margin: 2px; width: 306px; height: 89px;", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.certificationpDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "CertificationsList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
